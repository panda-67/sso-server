{% extends 'base.html.twig' %}
{% block title %}{{ title ?? 'Hello SPA Home!' }}{% endblock %}
{% block body %}
    <div data-controller="router"
         data-action="popstate@window->router#popstate"
         class="min-h-screen bg-gray-100 flex flex-col items-center justify-start py-2">
        <!-- Navbar -->
        <nav data-router-target="navbar"
             class="w-full max-w-4xl px-6 py-4 bg-white shadow flex justify-between items-center mb-4 rounded">
            {{ navbar|raw }}
        </nav>
        <!-- Main SPA Container -->
        <main id="app"
              data-router-target="element"
              class="w-full max-w-4xl bg-white p-6 rounded shadow">
            {% if content is defined %}
                {{ content|raw }}
            {% else %}
                <p class="text-gray-500">Loading...</p>
            {% endif %}
        </main>
    </div>
{% endblock %}
